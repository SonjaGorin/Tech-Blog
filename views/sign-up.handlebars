<div class="sign-up-card">
    <h2 id="signup-title">Sign Up</h2>
    <form class="signup-form">
        <label id="username-label" for="username-login">Username</label>
        <input id="username-signup-input" type="text"/>

        <label id="password-label" for="password-login">Password</label>
        <input id="password-signup-input" type="password"/>

        <button id="signup-button" type="submit">Sign up!</button>
        <a id="login-link" href="/login">Login instead</a>
     </form>
</div>

<script src="./js/sign-up.js"></script>